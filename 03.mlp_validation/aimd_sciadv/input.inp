
&GLOBAL
  PROJECT Pt 
  RUN_TYPE MD 
  PRINT_LEVEL medium 
  FLUSH_SHOULD_FLUSH T
  WALLTIME 345000
&END GLOBAL

&MULTIPLE_FORCE_EVALS
  FORCE_EVAL_ORDER 1 2 3
  MULTIPLE_SUBSYS T
&END MULTIPLE_FORCE_EVALS

@SET METHOD MIXED
@include input.inc

! force_eva for system
@SET METHOD QS
@include input.inc

! force_eva for restraining water
@SET METHOD FIST
@include input.inc

&MOTION
 &CONSTRAINT
    &FIXED_ATOMS
      LIST  205 221..252 268
    &END FIXED_ATOMS
 &END CONSTRAINT

#  &GEO_OPT
#    TYPE minimization
#    OPTIMIZER BFGS
#    MAX_ITER 200 
#  &END GEO_OPT

  &MD
    ENSEMBLE LANGEVIN
    &LANGEVIN
      GAMMA 0.001   # 0
      NOISY_GAMMA 0
    &END LANGEVIN

    &THERMAL_REGION
      DO_LANGEVIN_DEFAULT TRUE
          FORCE_RESCALING TRUE
          &PRINT
       &TEMPERATURE
      &END
       &LANGEVIN_REGIONS
            FILENAME __STD_OUT__
       &END LANGEVIN_REGIONS
     &END PRINT

      &DEFINE_REGION      #H2O
        TEMPERATURE 330
        NOISY_GAMMA_REGION 2.2E-4
        LIST 1..204
      &END DEFINE_REGION

      &DEFINE_REGION      #pt
        TEMPERATURE 330
        NOISY_GAMMA_REGION 5E-5
        LIST 206..220  253..267
      &END DEFINE_REGION

    &END THERMAL_REGION
    TIMESTEP 0.5
    STEPS 30000000
    TEMPERATURE 330
    TEMP_KIND .TRUE.

  &END MD

  &PRINT
   &TRAJECTORY
     &EACH
       MD 1
     &END EACH
   &END TRAJECTORY
   &VELOCITIES
     &EACH
       MD 1
     &END EACH
   &END VELOCITIES
   &FORCES ON
     &EACH
       MD 1
     &END EACH
   &END FORCES
   &RESTART_HISTORY 
     &EACH
       MD 1000
     &END EACH
   &END RESTART_HISTORY
   &RESTART
     BACKUP_COPIES 3
     &EACH
       MD 1
     &END EACH
   &END RESTART
#   &STRESS
#   &END STRESS
  &END PRINT

&END MOTION

&EXT_RESTART
   RESTART_FILE_NAME ./Pt-1.restart
#  RESTART_COUNTERS False
&END EXT_RESTART

